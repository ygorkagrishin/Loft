.h-acco,
.h-acco__sect
    @media screen and ( max-width 650px )
        flex-direction: column;

.h-acco__name
    @media screen and ( max-width 650px )
        width: 100%; 
        padding: 5%;
    span 
        @media screen and ( max-width 650px )
            position: static;
            font-size: 32px;
            transform: rotate(0) translate(0,0);
        @media screen and ( max-width 425px )
            font-size: 24px;
        @media screen and ( max-width 345px )
            font-size: 18px;

.js-h-acco-box
    @media screen and ( max-width 650px )
        max-width 100%;
        height: 0;

.h-acco__desc
    @media screen and ( max-width 650px )
        padding: 5%;
    p
        @media screen and ( max-width 345px ) and ( max-height 500px )
            font-size: 10px;
            line-height: 20px;
    
.js-h-acco-fade--out
    opacity: 0;
    transition: all 0s;

.js-h-acco-fade--in
    opacity: 1;
    transition: all .5s 1s;

.h-acco__sect.active
    .js-h-acco-box
        @media screen and ( max-width 1024px )
            max-width: 520px;
        @media screen and ( max-width 650px )
            max-width: 100%;
            height: 65vh; 