.acco
    @media screen and ( max-width 1024px )
        width: 70%;
        margin: 0 auto;
        text-align: center;
    @media screen and ( max-width 540px )
        width: 80%;
        padding: 8% 0;
    @media screen and ( max-width 375px )
        width: 100%;
        padding: 5% 0;

.acco__sect
    @media screen and ( max-width 1024px )
        margin-bottom: 7%;
    @media screen and ( max-width 375px )
        margin-bottom: 5%;

.acco__name
    @media screen and ( max-width 1024px )
        font-size: 25px;
    @media screen and ( max-width 375px )
        font-size: 20px;
        line-height: 1;
    @media screen and ( max-width 345px )
        font-size: 18px; 
    .acco__arrow
        @media screen and ( max-width 1024px )
            margin-right: 9px;

.acco__cont
    @media screen and ( max-width 1024px )
        flex-direction: column;
        align-items: center;
        padding: 4% 0;
    @media screen and ( max-width 345px )
        padding: 3% 0;

.acco__desc
    h4
        @media screen and ( max-width 1024px )
            margin: 4% 0;
        @media screen and ( max-width 540px )
            margin: 5.5% 0 4% 0;
        @media screen and ( max-width 345px )
            margin: 4% 0 2% 0;

.acco__sect.active
    @media screen and ( max-width 1024px )
        margin-bottom: 3.5%;
    @media screen and ( max-width 540px )
        margin-bottom: 5%;