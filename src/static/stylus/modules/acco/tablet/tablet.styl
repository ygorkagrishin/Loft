.acco
    @media screen and ( max-width 1024px )
        width: 70%;
        margin: 0 auto;
        text-align: center;

.acco__sect
    @media screen and ( max-width 1024px )
        margin-bottom: 7%;

.acco__name
    @media screen and ( max-width 1024px )
        font-size: 25px;
    .acco__arrow
        @media screen and ( max-width 1024px )
            margin-right: 9px;

.acco__cont
    @media screen and ( max-width 1024px )
        flex-direction: column;
        align-items: center;
        padding: 3% 0;

.acco__desc
    @media screen and ( max-width 1024px )
        padding: 1% 10%;
    h4
        @media screen and ( max-width 1024px )
            margin: 4% 0 5% 0;

.acco__sect.active
    @media screen and ( max-width 1024px )
        margin-bottom: 3.5%;