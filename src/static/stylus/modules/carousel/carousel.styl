.caro
    width: 100%;
    overflow: hidden;

.caro__wrap
    display: flex;
    will-change: transform;

.caro__wrap_notransition
    transition: 0ms !important;

.caro__slide
    @extend .sect__cont;
    position: relative;
    display: flex;
    align-items: center;
    flex: 1 0 100%;
    color: #fff;
    h3
        margin: 84px 0 37px 0;
        font: 72px / 64px gagalinReg;
    
.caro__pic,
.caro__desc
    width: 50%; 

.caro__pic
    text-align: center;
    img
        width: 100%;

.caro__desc 
    padding-left: 12px;
    align-self: flex-start;

.caro__other
    display: flex;
    align-items: flex-end;
    margin-top: 20px;

.caro__price
    margin-right: 26px;
    font: 30px / 28px gagalinReg;
    color: primaryOrange;
    span 
        font-size: 72px;
        line-height: 1;  

.caro__comp
    position: absolute;
    top: 90px;
    left: 10px;
    width: 90px;
    height: 90px;
    padding: 13px 22px;
    text-align: center;
    background-color: rgba(primaryOrange,.7);
    border-radius: 5px;
    p
        position: relative;
        top: -1px;
        font: 14px / 1 gagalinReg;
        color: #fff;

.caro__list
    position: absolute;
    top: 0;
    left: 90px;
    z-index: 9999999999;
    display: none;
    width: 270px;
    padding: 16px 20px;
    text-align: left;
    color: primaryBlack;
    background-color: #fff;
    border-radius: 5px;
    
.caro__comp-wrap
    width: 100%;

.caro__item
    display: flex;
    align-items: center;
    &:not(:last-child)
        margin-bottom: 8px;

.caro__comp-pic
    width: 40px;
    margin-right: 30px;

.caro__comp-comp
    flex: 2;
    font-family: ubuntuMed;

.caro__comp-close
    position: relative;
    display: none;
    svg
        fill: primaryOrange;

.caro__kkal
    position: absolute;
    bottom: 88px;
    left: -5px;
    width: 90px;
    height: 90px;
    padding: 13px;
    text-align: center;
    span 
        @extend .caro__comp p;
        position: absolute;
        top: 42px;
        left: 29px;
        font-size: 20px;
        line-height: 1;
    p 
        @extend .caro__comp p;
        top: -5px;
    svg 
        width: 100% !important;
        height: 100% !important;

.js-comp-trigger,
.js-kkal-trigger,
.js-comp-close
    position: absolute;
    top: 0;
    left: 0;
    z-index: 9999;
    width: 100%;
    height: 100%;
    cursor: pointer;

.js-comp-close
    top: -6px;
    left: -46%;
    width: 28px;
    height: 28px;

.caro__comp.active
    background-color: primaryOrange;
    .caro__list
        display: flex;

.caro__arrow
    position: absolute;
    top: 48.5%;
    z-index: 9999999;
    width: 30px;
    cursor: pointer;

.caro__prev
    left: 3.5%;
    transform: rotate(90deg);

.caro__next
    right: 3.5%;
    transform: rotate(-90deg);

.js-arrow-prev,
.js-arrow-next
    position: absolute;
    top: -65%;
    left: -35%;
    z-index: 9999;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    cursor: pointer;