#js-container
    will-change: transform;

.js-nav
    position: fixed;
    top: 80px;
    right: 39px;
    z-index: 999;
    a
        position: relative;
        display: block;
        width: 6px;
        height: 6px;
        margin: 15px;
        background-color: #fff;
        border-radius: 50%;
    .active
        &::after
            content: '';
            position: absolute;
            top: -6px;
            left: -6px;
            display: block;
            width: 16px;
            height: 16px;
            border: 1px solid #fff;
            border-radius: 50%;
