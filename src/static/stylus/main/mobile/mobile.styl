.we__desc
    @media screen and ( max-width 540px )
        width: 70%;
        text-align: left;
    @media screen and ( max-width 425px )
        width: 83%;
    @media screen and ( max-width 345px )
        width: 85%;
    h3
        @media screen and ( max-width 425px )
            padding: 3% 0;
        @media screen and ( max-width 375px )
            font-size: 20px;
            line-height: 24px;

.we__natural
    h3
        @media screen and ( max-width 540px )
            padding: 26px 0 11px 0;
