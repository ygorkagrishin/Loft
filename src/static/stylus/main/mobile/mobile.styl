.hero__pic,
.hero__desc
    @media screen and ( max-width 540px )
        width: 77%;
    @media screen and ( max-width 425px )
        width: 100%;

.hero__pic
    @media screen and ( max-width 540px )
        padding-left: 6%;
    .hero__helper
        @media screen and ( max-width 425px )
            margin-top: -32%;
    img[alt="burger"]
