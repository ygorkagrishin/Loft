.form__col_size_s:nth-child(3)
    @media screen and ( max-width 540px )
        margin-right: 0;

.form__col--mobile
    @media screen and ( max-width 540px )
        display: none;

.form__row--comment
    @media screen and ( max-width 540px )
        margin-bottom: 6.5% !important;
    @media screen and ( max-width 345px ) and ( max-height 500px )
        margin-bottom: 4.5% !important;

.form__row--radio,
.form__row--checkbox
    @media screen and ( max-width 540px )
        justify-content: center;

.form__row--radio
    @media screen and ( max-width 540px )
        margin-bottom: 6% !important;
    @media screen and ( max-width 345px ) and ( max-height 500px )
        margin-bottom: 3% !important;

.form__input
    @media screen and ( max-width 375px )
        padding: 8px 18px 7px 18px;

.form__comment
    @media screen and ( max-width 345px ) and ( max-height 500px )
        height: 60px;

.form__answer-cont
    @media screen and ( max-width 425px )
        width: 180px;
        padding: 18px 8px;
    @media screen and ( max-width 425px )
        p
            margin-bottom: 10px;

.form__row
    .form__btn
        @media screen and ( max-width 540px )
            justify-content: center;

.form__helper
    @media screen and (max-width 540px)
        margin: 0 !important;

