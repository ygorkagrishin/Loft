// Form
/* **************************** */
.form__title
    @media screen and ( max-width 540px )
        width: 80%;
        padding: 12% 0 4.5% 0;
        margin: auto;
    @media screen and ( max-width 425px )
        width: 100%;
        padding: 10% 0;
        font-size: 36px;
        line-height: 1;
    @media screen and ( max-width 345px )
        padding: 5% 0;
        font-size: 28px;

.form__form
    & > .form__row:not(:last-child)
        @media screen and ( max-width 540px )
            &:not(:last-child)
                margin-bottom: 4.5%;
