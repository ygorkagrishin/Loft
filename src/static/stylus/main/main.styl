#preloader
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99999999999999;
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center; 
    background-color: primaryBlack;

.preloader__status
    font: 72px / 64px gagalinReg;
    color: primaryYellow;
    span 
        display: inline-block;
        animation-name: pulse;
        animation-timing-function: linear;
        animation-iteration-count: infinite;
        &:nth-child(1)
            animation-delay: 2s;
        &:nth-child(2)
            animation-delay: 4s;
        &:nth-child(3)
            animation-delay: 6s;
