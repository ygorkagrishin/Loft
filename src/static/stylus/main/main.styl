/* **************************** */
// Review
/* **************************** */
.review__reviews
    display: flex;
    flex-wrap: wrap;
    height: 100%;

.review__review
    position: relative;
    flex: 1 0 25%;
    color: #fff;
    background: no-repeat center / cover;
    filter: grayscale(100%);
    h3
        margin-bottom: 15px;
        font: 14px / 28px gagalinReg;
    p:not(:last-child)
        margin-bottom: 12px;
    & > .review__hover
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;

.review__hover
    padding: 41px 20px;
    background-color: rgba(primaryBlack,.7);
    visibility: hidden;

.review__review:hover > .review__hover
    visibility: visible;

.review__popup
    position: absolute;
    top: 0;
    left: 0;
    z-index: 99999;
    display: none;
    width: 100%;
    height: 100%;
    background-color: rgba(primaryBlack,.9);
    & > div
        position: relative;
        max-width 460px;
        padding: 20px;
        background-color: #fff;
        border-radius: 5px;
    h4
        @extend .review__review h3;
        color: baseFontColor;

.review__popup-close
    position: absolute;
    top: 20px;
    right: 20px;
    z-index 9999;
    cursor: pointer;
    svg
        fill: primaryOrange;
    
.js-popup-close
    position: absolute;
    top: -12%;
    left: -32%;
    z-index: 99999;
    width: 24px;
    height: 24px;
    cursor: pointer;

.btn__more_desktop_none
    display: none;

.review__popup.active
    display: flex;
    justify-content: center;
    align-items: center;
