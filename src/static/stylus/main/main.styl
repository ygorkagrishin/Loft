/* **************************** */
// Form
/* **************************** */
.form
    // background: url('image/content/form/chalkboard_texture_mc2015_by_mattiamc-d8dbnac.png') no-repeat center / cover;
    background: no-repeat center / cover;

.form__title
    padding: 85px 0 76px 0;
    text-align: center;
    color: primaryYellow;

.form__form
    padding: 0 9px;

.form__row
    display: flex;
    justify-content: space-between;
    &:not(:last-child)
        margin-bottom: 14px;

.form__col
    flex: 1;
    &:not(:last-child)
        margin-right: 18px;

.form__name
    margin-bottom: 2px;
    color: #fff;

.form__input
    width: 100%;
    padding: 10px 21px 9px 21px;
    border: none;
    border-radius: 5px;
    outline-color: primaryYellow;

.form__row--comment
    margin-bottom: 7px !important;

.form__comment
    padding: 7px 21px 6px 21px;

.form__row--radio,
.form__row--checkbox
    justify-content: flex-start;
    & > div:not(:last-child)
        margin-right: 20px; 

.form__row--radio
    margin-bottom: 18px !important;

.form__radio,
.form__checkbox
    display: none;

.form__radio + label::before
    content: '';
    display: inline-block;
    width: 15px;
    height: 15px;
    margin-right: 8px;
    background: #fff url('image/content/form/Ellipse.png') no-repeat -300px -300px / 47%;
    border-radius: 50%;
    vertical-align: -2px;

.form__radio:checked + label::before
    background: #fff url('image/content/form/Ellipse.png') no-repeat 50% 50% / 47%;

.form__checkbox + label::before
    @extend .form__radio + label::before;
    border-radius: 0;
    background: #fff url('image/content/form/w128h1281338911632checkmark21.png') no-repeat -300px -300px / 68%;

.form__checkbox:checked + label::before
    background: #fff url('image/content/form/w128h1281338911632checkmark21.png') no-repeat center / 68%;

.form__row    
    .form__btn
        justify-content: flex-start;

.form__answer
    position: absolute;
    top: 0;
    left: 0;
    display: none;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;

.form__answer-cont
    width: 196px;
    padding: 20px 19px;
    text-align: center;
    background-color: #fff;
    border-radius: 5px;
    box-shadow: 0 0 46px 14px rgba(primaryBlack,0.3);
    p
        margin-bottom: 12px;

.form__answer.active
    display: flex;

/* **************************** */
// Form end
